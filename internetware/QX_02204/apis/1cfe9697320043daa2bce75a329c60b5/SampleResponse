  <script type="text/javascript">

       function localSearch(){
			   var   re=/\/|\\|=|\&|\$|%|\^/g; 
			   var key= document.f.key.value;
               if(key==""){
               alert("请输入查询关键字");
               return;
               }else if(re.test(key)==true){
					alert( "您输入的关键字中含有非法字符！ ");
					return false;
				}
			   document.f.key.value = key;
               document.f.submit();
       }
          </script>
 <script type="text/javascript">
  		//var mydate = new Date();
		//mydate.getTime();
		//document.getElementById("endtime").value = mydate.getYear() + '-' + (mydate.getMonth() + 1) + '-' + mydate.getDay();
		function getdate(){
			var now=new Date()
			y=now.getFullYear()
			m=now.getMonth()+1
			d=now.getDate()
			m=m<10?"0"+m:m
			d=d<10?"0"+d:d
			document.getElementById("endtime").value=y+"-"+m+"-"+d;
		}
    </script>
